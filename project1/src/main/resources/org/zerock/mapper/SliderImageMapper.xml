<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.zerock.mapper.SliderImageMapper">

    <select id="getAllSliderImages" resultType="org.zerock.domain.SliderImageDTO">
        SELECT * FROM slider_images ORDER BY id ASC
    </select>

    <insert id="insertSliderImage">
        INSERT INTO slider_images (file_name) VALUES (#{file_name})
    </insert>

    <select id="getSliderImageById" parameterType="int" resultType="org.zerock.domain.SliderImageDTO">
        SELECT * FROM slider_images WHERE id = #{id}
    </select>

    <delete id="deleteSliderImage" parameterType="int">
        DELETE FROM slider_images WHERE id = #{id}
    </delete>

    <update id="updateSliderImage">
        UPDATE slider_images SET file_name = #{file_name} WHERE id = #{id}
    </update>

</mapper>